.jqPromptWrapper {
  z-index: 1 !important;
  overflow: visible;
  height: 0px;
  width: 0px;
  position: absolute;
  display: inline-block;
  vertical-align: top;
}

.jqPrompt {
  /* Z-INDEX */
  z-index: 1 !important;
  .jqPromptArrow { z-index: 2 !important; }

  position: absolute;
  display: block;
  cursor: pointer;

  &.redPopup {
    $red = #ee0101;
    .jqPromptContent {
      color: $red;
      border: 2px solid $red;
    }
    .jqPromptArrow div {
      background: $red;
    }
  }

  &.greenPopup {
    $green = #33be40;
    .jqPromptContent {
      color: $green;
      border: 2px solid $green;
    }
    .jqPromptArrow div {
      background: $green;
    }
  }

  &.blackPopup {
    $black = #393939;
    .jqPromptContent {
      color: $black;
      border: 2px solid $black;
    }
    .jqPromptArrow div {
      background: $black;
    }
  }

  .jqPromptContent {
    background: #fff;
    position:relative;
    font-size: 11px;
    box-shadow: 0 0 6px #000;
    -moz-box-shadow: 0 0 6px #000;
    -webkit-box-shadow: 0 0 6px #000;
    padding: 4px 10px 4px 8px;
    border-radius: 6px;
    -moz-border-radius: 6px;
    -webkit-border-radius: 6px;
    white-space: nowrap;
  }

  .jqPromptArrow {
    opacity: 0.87;
    width: 15px;
    margin: -2px 0 0 13px;
    position:relative;

    &.invisible div, div.invisible {
      background: none;
    }
    div {
      border: none;
      font-size: 0px;
      height: 1px;
      margin: 0 auto;
      line-height: 0;
      font-size: 0;
      display: block;
      &.shadow {
        box-shadow: 0 2px 6px #444;
        -moz-box-shadow: 0 2px 6px #444;
        -webkit-box-shadow: 0 2px 6px #444;
      }
    }

  }

}

body[dir='rtl'] .jqPrompt .jqPromptArrow,
body.rtl .jqPrompt .jqPromptArrow {
  margin: -2px 13px 0 0;
}
